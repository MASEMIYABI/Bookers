<h1>Editing Book</h1>
<%= form_with model:@book,url:"/books/#{@book.id}",local:true do |f| %>
<h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_field :body %>
  <%= f.submit 'uptate book' %>
  <span
  ><%=link_to "show",book_path%>
  </span>
<span>
<%=link_to "back",books_path(f)%>
</span>

<% end %>